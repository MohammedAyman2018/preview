extends ../layout.pug

block styles
    link(rel="stylesheet", href="/static/css/index.css")
    link(rel="stylesheet", href="/static/css/libs/aos.css")
    link(rel="stylesheet", href="/static/plugins/slick/slick.css")
    title= title

block content
    // Start welcome banner
    section.welcome-banner
        .container
            .row.flex-column-reverse.flex-md-row
                // Start Banner Details
                .col-md-6.text-right(data-aos="fade-right")
                    .details.py-5.h-100.d-flex.flex-column.justify-content-between
                        h2.text-white شراء اﻷجهزة المستعملة أصبح أسهل بكثير
                        p.text-white-50
                            | ليه تشتري جديد وانت تقدر تشتري نفس الجهاز باستعمال بسيط وبسعر اقل بكتير.
                        .buttons
                            a.px-5.d-inline-block.ml-3.btn.btn-success(href="/laps") اشترِ الآن
                            if(!user)
                                a.mx-2.px-lg-5.d-inline-block.btn.btn-outline-dark(href="/sign-up") انشئ حساب

                // End Banner Details
                // Start Banner Image
                .col-md-6.text-right(data-aos="fade-left")
                    .img
                        img.img-fluid(src="/static/images/laptop.png" alt="لابتوب")
                // End Banner Image
                // End welcome banner

    // Start feats
    section.feats.py-5
        .container
            h2.header مميزاتنا
            .row.my-5
                // Start Single Feat
                .col-md-4
                    include ../components/feat
                    +feat('delivery',"الشحن", "خدمة الشحن لجميع انحاء الجمهورية.بسعر رمزي.")
                .col-md-4
                    +feat('defense', "الضمان", "نقدم لك فترة سبوع ضماناً لحقك. يمكنك فيها صيانة أو تبديل الجهاز حسب حالته.")
                .col-md-4
                    +feat('wrench', 'الصيانة', "انسَ عيوب اﻷجهزة المستعملة فلدينا نظام صيانة (اختياري) لحمايتك من مشاكل الاستخدام.")
    // End feats

    section.products(data-aos="fade-up")
        .container
            header.d-flex.justify-content-between.align-items-center.flex-wrap 
                h2.header  أحدث اللابات 
                a(href="/laps") كل العروض
            if laps.length > 0
                .carousel.my-5
                    include ../components/productCard 
                    each lap in laps
                        +productCard(lap)
            else 
                p.text-muted.text-center.my-5 لا يوجد

block scripts 
    script(src="/static/js/libs/aos.js")
    script(src="/static/plugins/slick/slick.min.js")
    script(src="/static/js/main.js")
